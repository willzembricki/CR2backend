<p id="notice"><%= notice %></p>

<h1>Crimes</h1>

<table>
  <thead>
    <tr>
      <th>Crime name</th>
      <th>Pop</th>
      <th>Asian pop</th>
      <th>Hawaiian</th>
      <th>Black</th>
      <th>American indian</th>
      <th>Unknown</th>
      <th>White</th>
      <th>Year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @crimes.each do |crime| %>
      <tr>
        <td><%= crime.crime_name %></td>
        <td><%= crime.pop %></td>
        <td><%= crime.asian_pop %></td>
        <td><%= crime.hawaiian %></td>
        <td><%= crime.black %></td>
        <td><%= crime.american_indian %></td>
        <td><%= crime.unknown %></td>
        <td><%= crime.white %></td>
        <td><%= crime.year %></td>
        <td><%= link_to 'Show', crime %></td>
        <td><%= link_to 'Edit', edit_crime_path(crime) %></td>
        <td><%= link_to 'Destroy', crime, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

